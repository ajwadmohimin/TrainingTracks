actions
(
    
    {
        name goodCells;
	type cellSet;
	action new;
	source shapeToCell;
	sourceInfo
	{
	    type hex;
	}        
    }
    
    {
	name	badCells;
	type	cellSet;
	action	new;
	source cellToCell;
	sourceInfo
	{
	    set	goodCells;
	}
    }
    
    {
	name	badCells;
	type	cellSet;
	action	invert;
    }
    
    {
	name	badCells;
	type	cellSet;
	action	add;
	source	cellToCell;
	sourceInfo
	{
	    set	badFaceAngle;
	}
    }
    
    {
	name	veryGoodCells;
	type	cellSet;
	action	new;
	source	cellToCell;
	sourceInfo
	    {
		set	badCells;
	    }
    }
    
    {
	name	veryGoodCells;
	type	cellSet;
	action	invert;
    }
    
    {
	name	badFaces;
	type	faceSet;
	action	new;
	source	cellToFace;
	sourceInfo
	{
	    set		badCells;
	    option	all;
	}
    }
    
    {
	name	goodFaces;
	type	faceSet;
	action	new;
	source	cellToFace;
